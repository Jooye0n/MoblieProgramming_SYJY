<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/post_position_textview"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:text="id" />

    <TextView
        android:id="@+id/post_title_textview"
        android:layout_width="295dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="제목"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post_body_textview"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_title_textview"
        android:text="내용"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/post_time_textview"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_body_textview"
        android:layout_marginTop="0dp"
        android:text="시간"
        android:textColor="#413f3f" />

    <TextView
        android:id="@+id/post_name_textview"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/post_body_textview"
        android:layout_marginEnd="98dp"
        android:text="이름" />

    <ImageButton
        android:layout_width="29dp"
        android:layout_height="26dp"
        android:background="@drawable/board" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/post_body_textview"
        android:layout_marginEnd="14dp"
        android:background="@drawable/like" />

</RelativeLayout>